{
  "name": "egg-kmore",
  "author": "waiting",
  "version": "2.0.5",
  "description": "egg plugin of kmore",
  "eggPlugin": {
    "name": "kmore"
  },
  "keywords": [
    "midway",
    "egg",
    "eggPlugin",
    "egg-plugin",
    "kmore",
    "knex",
    "typeorm",
    "database",
    "postgresql",
    "oracle",
    "typescript",
    "ts"
  ],
  "bin": {},
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/kmore/issues"
  },
  "homepage": "https://waitingsong.github.io/kmore/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/kmore.git"
  },
  "license": "MIT",
  "dependencies": {
    "@waiting/shared-types": "8",
    "kmore": "^2.0.5",
    "kmore-cli": "^2.0.5"
  },
  "devDependencies": {
    "autod": "3",
    "autod-egg": "1",
    "cross-env": "7",
    "egg": "2",
    "egg-bin": "4",
    "egg-core": "4",
    "egg-mock": "4",
    "knex": "^0.95.0",
    "pg": "^8.2.1"
  },
  "peerDependencies": {
    "knex": ">=0.95.0",
    "typescript": ">=4.1"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "files": [
    "tsconfig.json",
    "rollup.config.js",
    "src/**/*.ts",
    "bin/*.js",
    "dist",
    "agent.js",
    "app.js",
    "app",
    "config",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run tsc && npm run rp",
    "build:fixtures": "tsc -p test/fixtures/tsconfig.json",
    "clean": "rm -rf dist/* && npm run clean:lock && npm run clean:cache",
    "clean:cache": "rm .eslintcache .vscode/.tsbuildinfo .vscode/.tsbuildinfo.* -f",
    "clean:lock": "rm package-lock.json -f",
    "cov": "npm run build:fixtures && cross-env TS_NODE_PROJECT=test/tsconfig.json egg-bin cov test/**/*.test.ts",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "purge": "npm run clean && rm node_modules -rf",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "npm run build:fixtures && cross-env TS_NODE_PROJECT=test/tsconfig.json egg-bin test test/**/*.test.ts",
    "test:local": "npm run build:fixtures && cross-env TS_NODE_PROJECT=test/tsconfig.json egg-bin test test/**/*.test.ts",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "dist",
      "node_modules*",
      "src/bin",
      "src/domain.ts",
      "src/interface.ts",
      "test*",
      "**/node_modules*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "json",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
