{
  "name": "kmore-cli",
  "author": "waiting",
  "version": "4.0.0",
  "description": "Command line to generate dicts from ts source files for kmore",
  "keywords": [
    "kmore",
    "knex",
    "typescript",
    "ts"
  ],
  "bin": {
    "kmore": "./dist/bin/kmore-cli.js"
  },
  "browser": "",
  "es2015": "",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/kmore/issues"
  },
  "homepage": "https://waitingsong.github.io/kmore/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/kmore.git"
  },
  "license": "MIT",
  "dependencies": {
    "@waiting/shared-core": "8",
    "@waiting/shared-types": "8",
    "@waiting/shared-types-dev": "2",
    "kmore-types": "^4.0.0",
    "rxjs": "6",
    "rxwalker": "3",
    "tsconfig-resolver": "^3.0.1",
    "yargs": "16"
  },
  "devDependencies": {
    "cross-env": "7"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "files": [
    "src/**/*.ts",
    "bin/*.js",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run tsc && npm run rp",
    "clean": "rm -rf dist/* -rf && npm run clean:lock && npm run clean:cache",
    "clean:cache": "rm -rf .eslintcache .vscode/.tsbuildinfo .vscode/.tsbuildinfo.*",
    "clean:lock": "rm package-lock.json -f",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc mocha --parallel=false",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "purge": "npm run clean && rm node_modules -rf",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:browser": "cd .config && npm run browser && cd ..",
    "test:local": "cross-env TS_NODE_PROJECT=test/tsconfig.json ../../node_modules/.bin/mocha --parallel=false",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "dist",
      "node_modules*",
      "src/bin",
      "src/domain.ts",
      "src/interface.ts",
      "test*",
      "**/node_modules*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "json",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
