{
  "name": "kmore",
  "author": "waiting",
  "version": "0.14.0",
  "description": "A Knex little more typed factory of SQL query builder powed by TypeScript, with auto-generated type-safe tables accessor for Node.js",
  "keywords": [
    "knex",
    "typed knex",
    "factory",
    "sql",
    "query",
    "postgres",
    "postgresql",
    "oracle",
    "connection",
    "AST",
    "typescript",
    "ts"
  ],
  "bin": {},
  "browser": "",
  "es2015": "",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/kmore/issues"
  },
  "homepage": "https://waitingsong.github.io/kmore/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/kmore.git"
  },
  "license": "MIT",
  "dependencies": {
    "@waiting/shared-types": "3",
    "kmore-types": "^0.14.0"
  },
  "devDependencies": {
    "@waiting/shared-core": "3",
    "cross-env": "7",
    "knex": "^0.20.0",
    "pg": "^7.11.0"
  },
  "peerDependencies": {
    "knex": ">=0.15.0",
    "typescript": "3"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run tsc && npm run rp",
    "clean": "rm -rf dist/* .vscode/.tsbuildinfo .vscode/.tsbuildinfo.* ",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc mocha",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:browser": "cd .config && npm run browser && cd ..",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "dist",
      "node_modules*",
      "src/bin",
      "src/domain.ts",
      "src/interface.ts",
      "test*",
      "**/node_modules*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "all": true
  }
}
